@model List<Property_Rental_Management.Models.Message>
@{
    ViewBag.Title = "showMessages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Messages</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <tr>
            <th>Sender</th>
            <th>Content</th>
        </tr>
        @foreach (var message in Model)
        {
            <tr>
                <td>@message.SenderID</td>
                <td>@message.Content</td>
            </tr>
        }
    </table>
}
else
{
    <p>No messages found.</p>
}

<!-- Add a button that redirects to the SendMessages view -->
<a href="@Url.Action("SendMessages", "Messages")" class="btn btn-primary">Send a Message</a>