@model IEnumerable<Property_Rental_Management.Models.Property>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of the Properties</h2>

<p>
    @if (Session["User"] != null)
    {
        var user = (Property_Rental_Management.Models.User)Session["User"];
        if (user.UserType == "a" || user.UserType == "m")
        {
            @Html.ActionLink("Create New", "Create")
        }
    }
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
           
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.ManagerID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ManagerID)
            </td>
            <td>
                @if (Session["User"] != null)
                {
                    var user = (Property_Rental_Management.Models.User)Session["User"];
                    if (user.UserType == "a" || user.UserType == "m")
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.PropertyID })
                        <text> | </text>
                        @Html.ActionLink("Details", "Details", new { id = item.PropertyID })
                        <text> | </text>
                        @Html.ActionLink("Delete", "Delete", new { id = item.PropertyID })
                        <text> | </text>
                    }

                }

                @Html.ActionLink("View Apartments", "ListApartments", "Apartments", new { propertyId = item.PropertyID }, null)
            </td>

        </tr>
    }


</table>
